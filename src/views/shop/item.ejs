<%- include('../partials/header') %>

    <main class="container">
        <section class="item">
            <% if (item==false) { %>
                <article class="item__info">
                    <h3 class="item__name">Producto no existente o fuera de stock</h3>
                </article>
                <% } else{ %>
            <picture class="item__img card-item__cover">
                <img class="card-item__img--front" src="/img<%=item.image_front%>"
                    alt="<%= item.product_description %>">
                <img class="card-item__img--back" src="/img<%=item.image_back%>"
                    alt="<%= item.product_description %> - en caja">
            </picture>
            <article class="item__info">
                <p class="item__license"><%=item.licence_name%></p>
                <h3 class="item__name"><%=item.product_name%></h3>
                <p class="item__description"><%=item.product_description%></p>
                <p class="item__price">$<%=item.price%></p>
                <form class="item__cart" action="/shop/cart" method="POST" enctype="application/x-www-form-urlencoded">
                    <input class="hidden" type="text" name="productoID" id="productoID" value="<%=item.product_id%>" required>
                    <button id="subtract" class="item__quantity" type="button">-</button>
                    <input id="quantity" class="item__input" type="text" name="quantity" placeholder="0">
                    <button id="add" class="item__quantity" type="button">+</button>
                    <button class="item__submit btn btn--primary btn--medium" type="submit">Agregar al carrito</button>
                </form>
                <p class="item__promo">
                    <a href="">Ver métodos de pago</a>
                    - <%=item.dues%> CUOTAS SIN INTERÉS
                </p>
            </article>
            <% } %>
        </section>

        <section class="slider container glide">
            <%- include('../components/slider') %>
        </section>
    </main>

    <%- include('../partials/footer') %>