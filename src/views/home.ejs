
<%- include('./partials/header') %>

<body>
    <section class="hero">
        <article class="hero__content container">
            <h3 class="hero__title"> Nuevos Ingresos</h3>
            <p class="hero__text">Descubrí el próximo Funko Pop de tu colección</p>
            <a class="hero__link" href="/shop">SHOP</a>
        </article>
    </section>
    <main class="main-container">
        <% colecciones.forEach(licence => { %>
        <section class="collection container">
            <article class="collection__content">
                <h3 class="collection__title"><%= licence.licence_name %></h3>
                <p class="collection__text"><%= licence.licence_description %></p>
                <a class="collection__link" href="/shop?q=<%= licence.licence_name %>">VER COLECCIÓN</a>
            </article>
            <picture class="collection__cover">
                <img src="<%= licence.licence_image %>"
                    alt="<%= licence.licence_description %>">
            </picture>
        </section>
        <% });  %>

        <%- include('./components/slider') %>
    </main>
    
    <%if(message){%>
        <script>alert("<%= message %>")</script>
        <%} %>

    <%if(sendForm){%>
        <script>alert("<%= sendForm %>")</script>
    <%} %>
    <%- include('./partials/footer') %>
